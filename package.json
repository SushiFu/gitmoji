{
  "private": true,
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && npm run compile && electron ./app",
    "compile": "rimraf app/out",
    "pack": "npm run compile && build --dir",
    "dist": "npm run compile && build",
    "test": "xo"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "space": 4
  },
  "build": {
    "appId": "com.Meadowcottage.Gitmoji",
    "category": "public.app-category.utilities",
    "productName": "Gitmoji",
    "dmg": {
      "background": "build/background@2x.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 494,
        "height": 270
      }
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false
    }
  },
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^10.3.0",
    "rimraf": "^2.5.4",
    "xo": "^0.17.1"
  },
  "packageIgnore": [
    "LICENSE",
    "README.md",
    ".DS_Store",
    ".travis.yml",
    "appveyor.yml",
    "dist",
    "build/Screenshot.png"
  ]
}
